(require 'graph)

;; input : list of edges (( a . b) ( a . c) ....)
(define (alist->graph g alist) 
	(for (( edge alist)) 
		(graph-make-edge g 
			(graph-make-vertex g (first edge))
			(graph-make-vertex g (rest edge)))))
		
;; input : list of arcs (( a . b) ( a . c) ....)
(define (alist->digraph g alist)
	(for (( arc alist)) 
		(graph-make-arc g 
			(graph-make-vertex g (first arc))
			(graph-make-vertex g (rest arc)))))


;; build dependency graph

;;  a depends on b
;;  add arc (arrow) a --> b
(define (a->b  g a b) 
		(unless (equal? a b)
		(graph-make-arc g (graph-make-vertex g a) (graph-make-vertex g b))))

;(define (add-dependencies g dep-list)
